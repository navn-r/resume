{
  "name": "resume",
  "version": "1.0.0",
  "description": "Resume built with web technologies",
  "main": "app-resume.js",
  "module": "app-resume.js",
  "scripts": {
    "build": "tsc",
    "bundle": "rollup -c",
    "build:watch": "tsc --watch",
    "deploy": "npm run build && npm run bundle && mkdir -p docs && cp src/style.css docs/style.css && cp src/index.html docs/index.html && cp src/resume.json docs/resume.json && sed -i '7s@.*@    <script src=\"app-resume.bundled.js\"></script>@' docs/index.html && sed -i '6s@.*@    <link href=\"style.css\" rel=\"stylesheet\" />@' docs/index.html",
    "print:pdf": "rm -rf ./docs/RavindaranNavinn_Resume.pdf && ts-node print.ts",
    "clean": "rm -rf out docs",
    "clean:build": "rm -rf out",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "format": "prettier src/* --write",
    "serve": "es-dev-server --node-resolve --watch",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat app-resume.bundled.js | gzip -9 | wc -c ; rm app-resume.bundled.js"
  },
  "keywords": [
    "web-components",
    "lit-element",
    "typescript"
  ],
  "author": "The Polymer Authors",
  "license": "BSD-3-Clause",
  "dependencies": {
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "puppeteer": "^5.5.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.10.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.5",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-karma": "^3.4.8",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.60.1",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.2.1",
    "mocha": "^7.2.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.1",
    "rollup-plugin-filesize": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.3.1",
    "ts-node": "^9.1.1",
    "typescript": "^3.9.7",
    "web-component-analyzer": "^1.1.6"
  }
}
